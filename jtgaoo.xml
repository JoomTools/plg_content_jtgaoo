<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="content" method="upgrade">
	<name>PLG_CONTENT_JTGAOO</name>
	<author>Guido De Gobbis</author>
	<creationDate>Nov. 2015</creationDate>
	<copyright>(c) JoomTools.de. All rights reserved.</copyright>
	<license>GNU/GPLv3, see http://www.gnu.org/licenses/gpl-3.0.de.html</license>
	<authorEmail>guido.de.gobbis@jootmools.de</authorEmail>
	<version>1.0.1</version>
	<description>PLG_CONTENT_JTGAOO_DESC</description>

	<files>
		<filename plugin="jtgaoo">jtgaoo.php</filename>
		<folder>language</folder>
	</files>

	<config>
		<fields name="params">

			<fieldset name="basic">
				<field name="jtgaoo_ga_id"
				       type="text"
				       default=""
				       required="true"
				       label="PLG_CONTENT_JTGAOO_GA_ID_LABEL"
				       description="PLG_CONTENT_JTGAOO_GA_ID_DESC"/>
				<field name="jtgaoo_linktext"
				       type="text"
				       default="Google Analytics deaktivieren"
				       required="true"
				       label="PLG_CONTENT_JTGAOO_LINKTEXT_LABEL"
				       description="PLG_CONTENT_JTGAOO_LINKTEXT_DESC"/>
				<field name="jtgaoo_disclaimer"
				       type="editor"
				       height="50"
				       buttons="false"
				       filter="safehtml"
				       label="PLG_CONTENT_JTGAOO_GA_OO_DISCLAIMER_LABEL"
				       description="PLG_CONTENT_JTGAOO_GA_OO_DISCLAIMER_DESC"/>
			</fieldset>

		</fields>
	</config>
	<updateservers>
		<server type="collection" priority="1" name="JT - Updateserver">http://updateserver.joomtools.de/extensions.xml</server>
	</updateservers>
</extension>
